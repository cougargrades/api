{
  "compilerOptions": {
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ]
}