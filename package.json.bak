{
  "name": "@cougargrades/api",
  "version": "2.0.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "npm run build-ts && npm run lint && npm run format",
    "build-ts": "npx ttsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "npx ttsc --noEmit && npx eslint \"**/*.{js,ts}\" --quiet --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "init-emulator": "firebase emulators:start --export-on-exit=./.firestore-data",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Firebase\" -c \"cyan.bold,green.bold,magenta.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"firebase emulators:start --import=./.firestore-data\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Firebase\" -c \"cyan.bold,green.bold,magenta.bold\" \"npm run watch-ts\" \"npm run serve-debug\" \"firebase emulators:start\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "npx ttsc -w"
  },
  "main": "dist/cloudfunction.js",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@cougargrades/types": "0.0.49",
    "@types/express-serve-static-core": "^4.17.8",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0",
    "get-routes": "^2.0.6",
    "typescript-is": "^0.16.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.7",
    "@types/node": "^12.12.50",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ttypescript": "^1.5.12",
    "typescript": "^3.9.6"
  }
}
