{
  "functions": {
    "predeploy": [
      "npm --prefix \"$PROJECT_DIR/functions\" run lint"
    ]
  },
  "hosting": {
    "public": "./app/build/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/api/**",
        "function": "main"
      }
    ],
    "predeploy":"npm --prefix \"$PROJECT_DIR/app\" run build"
  }
}
